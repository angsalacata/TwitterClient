<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/imvProfilePicture"
        android:layout_width="101dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black"
        />

    <TextView
        android:id="@+id/txtvDetailsUserhandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imvProfilePicture"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="45dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="center"
         />

    <EditText
        android:id="@+id/txtvDetailBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imvProfilePicture"
        android:layout_below="@+id/myProfilePic"
        android:layout_marginTop="88dp"
        android:cursorVisible="false"
        android:clickable= "false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="10" />

    <TextView
        android:id="@+id/txtvDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtvDetailsUserhandle"
        android:layout_toEndOf="@id/imvProfilePicture"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-45dp"
        android:text="TextView"
        android:textSize="18sp" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtvDetailBody"
        android:layout_marginStart="60dp"
        android:background="#00aced"
        android:text="like"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/retweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvDetailBody"
        android:layout_marginStart="-150dp"
        android:layout_toEndOf="@+id/txtvDetailsUserhandle"
        android:background="#00aced"
        android:text="retweet"
        android:textColor="#ffffff" />
</RelativeLayout>